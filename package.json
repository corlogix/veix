{
  "name": "veix-pm",
  "version": "1.0.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf packages/**/lib",
    "build": "npm run clean && lerna run build --stream",
    "publish": "lerna publish --yes",
    "start": "concurrently --kill-others \"npm run start-veix\" \"npm run start-sandbox\"",
    "start-veix": "npm run build -- -- -- --watch",
    "start-sandbox": "lerna run watch --stream"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/corlogix/veix.git"
  },
  "author": "corlogixco@gmail.com",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/corlogix/veix/issues"
  },
  "homepage": "https://github.com/corlogix/veix#readme",
  "devDependencies": {
    "@pragmatics/conventional-changelog-preset": "^1.1.1",
    "@types/node": "^16.9.2",
    "concurrently": "^6.2.1",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3",
    "vite": "^2.5.8"
  }
}
